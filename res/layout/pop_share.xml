<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="5dip"
        android:text="分享到：" />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <LinearLayout
            android:id="@+id/weixin"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="15dip"
            android:gravity="center"
            android:orientation="vertical">
            
            <ImageView 
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:background="@drawable/weixin"
                />
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="微信好友"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12"/>
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/circle_friends"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="15dip"
            android:gravity="center"
            android:orientation="vertical">
            
            <ImageView 
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:background="@drawable/circle_friends"
                />
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="朋友圈"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12"/>
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/sina_microblog"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="15dip"
            android:gravity="center"
            android:orientation="vertical">
            
            <ImageView 
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:background="@drawable/sina_microblog"
                />
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="新浪微博"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12"/>
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/qq_friend"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="15dip"
            android:gravity="center"
            android:orientation="vertical">
            
            <ImageView 
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:background="@drawable/qq_friend"
                />
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="QQ好友"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12"/>
            
        </LinearLayout>
        "
    </LinearLayout>
    
</LinearLayout>
