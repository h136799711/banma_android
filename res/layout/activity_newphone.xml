<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@color/main_layout">

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/titlebar"
        android:orientation="horizontal" >

     <ImageView
            android:id="@+id/tv_back"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/top_bar_back" />
        
        <TextView  
            android:id="@+id/tv_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定手机"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
             android:textSize="15sp"
            />
    </RelativeLayout>
    <com.itboye.banma.view.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="258dp"
    android:layout_marginTop="15dip" >

    <EditText
        android:id="@+id/et_old_phone_number"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_margin="10dip"
        android:background="@drawable/bg_edittext"
        android:hint=""
        android:focusable="false"
        android:padding="5dip"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#AAAAAA"
        android:textSize="14dip" />
    <EditText
        android:layout_below="@+id/et_old_phone_number"
        android:id="@+id/et_old_pass"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_margin="10dip"
        android:background="@drawable/bg_edittext"
        android:hint="请输入当前登陆密码"
        android:padding="5dip"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#AAAAAA"
        android:textSize="14dip" />
    <EditText
         android:layout_below="@+id/et_old_pass"
        android:id="@+id/et_new_phone_number"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_margin="10dip"
        android:background="@drawable/bg_edittext"
        android:hint="请输入手机号"
        android:padding="5dip"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#AAAAAA"
        android:textSize="14dip" />
    <EditText
        android:id="@+id/et_check_code"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@+id/et_new_phone_number"
        android:layout_margin="10dip"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:hint="请输入获取的六位验证码"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#AAAAAA"
        android:textSize="14dip" />


    <Button
        android:id="@+id/btn_getcheckcode"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/et_check_code"
        android:layout_alignRight="@+id/et_check_code"
        android:background="@color/greendenglu"
        android:text="获取验证码"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_below="@+id/et_check_code"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_home_but"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="14sp" />
<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical">
</LinearLayout>

</RelativeLayout>

  </com.itboye.banma.view.BounceScrollView> 
</LinearLayout>
