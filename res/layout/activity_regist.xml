<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@color/main_layout">

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/titlebar"
        android:orientation="horizontal" >

     <ImageView
            android:id="@+id/tv_back_regesit"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/top_bar_back" />
        
        <TextView  
            android:id="@+id/tv_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
             android:textSize="15sp"
            />
    </RelativeLayout>
    <com.itboye.banma.view.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="258dp"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_margin="10dip"
        android:background="@drawable/bg_edittext"
        android:hint="@string/phone_number"
        android:padding="5dip"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#AAAAAA"
        android:textSize="14dip" />
    
<View  android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:layout_below="@+id/et_phone_number"
	    android:background="@color/lightgray"/>
    <EditText
        android:id="@+id/et_check_code"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@+id/et_phone_number"
        android:layout_margin="10dip"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:hint="@string/check_code"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#AAAAAA"
        android:textSize="14dip" />


    <Button
        android:id="@+id/btn_getcheckcode"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/et_check_code"
        android:layout_alignRight="@+id/et_check_code"
        android:layout_alignTop="@+id/et_check_code"
        android:background="@color/greendenglu"
        android:gravity="center"
        android:text="获取验证码"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_next_step"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_below="@+id/et_check_code"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_home_but"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_next_step"
        android:layout_marginTop="26dp"
        android:layout_toLeftOf="@+id/tv_url"
        android:text="注册代表同意"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_1"
        android:layout_alignBottom="@+id/tv_1"
        android:layout_alignRight="@+id/btn_next_step"
        android:layout_marginRight="64dp"
        android:text="《用户服务协议》"
        android:textColor="@color/blue"
        android:textSize="12sp" />

</RelativeLayout>

  </com.itboye.banma.view.BounceScrollView> 
</LinearLayout>
