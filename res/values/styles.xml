<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar" />

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="SplashTheme" parent="android:Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowEnterAnimation">@anim/splash_fade_in</item>
        <item name="android:windowExitAnimation">@anim/splash_fade_out</item>
    </style>

    <style name="Popup_Animation_Alpha" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/layout_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/layout_alpha_out</item>
    </style>

    <style name="Theme.Present" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/PresentAnimation</item>
    </style>

	<style name="CenterLine">
	    <item name="android:background" >#ffcccccc</item>  
	   <item name="android:layout_marginLeft">@dimen/more_item_marginlefth</item>
	   <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
	        </style>

    
    <style name="loading_large" >
		<item name="android:indeterminateDrawable">@anim/loading_big</item>
		<item name="android:layout_width">38.5dip</item> 
		<item name="android:layout_height">38.5dip</item>
	</style>
	
    <style name="popWindow_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_up_in</item>
        <item name="android:windowExitAnimation">@anim/pop_down_out</item>
    </style>
    
    <!-- 自定义loading dialog -->  
    <style name="picture_dialog" parent="android:style/Theme.Dialog">  
        <item name="android:windowFrame">@null</item>  
        <item name="android:windowNoTitle">true</item>   
        <item  name="android:background">@color/lightgray</item>
        <item name="android:windowIsFloating">true</item>  
        <item name="android:windowContentOverlay">@null</item>  
    </style>  
        <!-- 选择照片底部弹出层 -->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
 	</style>
    
    
    <style name="TitleBarBackground">  
        <item name="android:background">@drawable/bg_title_bar</item>  
    </style>  
            
    <style name="MyCustomTheme" parent="android:Theme">       
         <item name="android:windowTitleBackgroundStyle">@style/TitleBarBackground</item>  
         <item name="android:windowTitleSize">47dp</item>  
    </style> 
    
    <style name="loading_small" parent="@android:style/Widget.ProgressBar.Small">
		<item name="android:indeterminateDrawable">@anim/loading</item>
		<item name="android:layout_width">18.5dip</item> 
		<item name="android:layout_height">18.5dip</item>
		<item name="android:layout_gravity">center_vertical</item>
	</style>

</resources>